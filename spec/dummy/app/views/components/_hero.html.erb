<section class="text-gray-600 body-font min-h-screen flex items-center">
  <div class="container mx-auto flex px-5 md:flex-row flex-col items-center">
    <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Easily manage i18n
        <br class="hidden lg:inline-block">in your app
      </h1>
      <p class="mb-8 leading-relaxed">LocaleNinja is a powerful Git-based gem for effortless translation management in Ruby on Rails apps.</p>
      <div class="flex justify-center">
        <%= link_to "Get Started", 'https://github.com/squadracer/locale_ninja', class: "hidden md:inline-flex text-white bg-amber-500 border-0 py-2 px-6 focus:outline-none hover:bg-amber-600 rounded text-lg" %>
        <%= link_to "Demo", '/locale_ninja', class: "hidden ml-4 md:inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg" %>
      </div>
    </div>
    <div class="lg:max-w-4xl lg:w-full md:w-1/2 w-5/6">
        <%= image_tag("screen-1.png", class:"object-cover object-center rounded", alt: "Screen 1") %>
    </div>
  </div>
</section>