<div class="flex flex-col w-full p-8">
  <h1 class="text-dark-blue">Translations</h1>

  <!-- <%= render partial: "/components/table" %> -->

  <%@code_value_by_locales.each do |locale, *values| %>
    <div class="w-full max-w-sm px-4 py-3 m-2 bg-white rounded-md shadow-md">
        <div class="flex items-center justify-between">
            <span class="text-sm font-light text-gray-800"><%= locale %></span>
            <%= link_to "test", locale_path(locale) %> 
             <span class="text-sm font-light text-gray-800"><%= country_flag(locale) %></span>
        </div>
    </div>
  <% end %>
</div>
